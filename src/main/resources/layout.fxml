<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se281.gui.GuiController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="15.0" />
         </padding>
         <children>
            <Label text="Mind Game - Colour Guesser">
               <font><Font name="Arial Bold" size="28.0" /></font>
            </Label>
            <!-- Game Setup Area -->
            <HBox alignment="CENTER" spacing="15.0">
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
               <children>
                  <Label text="Difficulty:">
                     <font><Font size="16.0" /></font>
                  </Label>
                  <RadioButton fx:id="easyRadio" text="Easy" />
                  <RadioButton fx:id="mediumRadio" text="Medium" />
                  <RadioButton fx:id="hardRadio" text="Hard" />
                  <RadioButton fx:id="nightmareRadio" selected="true" text="Nightmare" />
                  <!-- ADDED: Input field for number of rounds -->
                  <Label text="Rounds:">
                     <font><Font size="16.0" /></font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="roundsTextField" prefWidth="60.0" promptText="e.g., 10" />
               </children>
            </HBox>
            <!-- Stats Display Area -->
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Label fx:id="roundLabel" text="Round: 0 / 0" />
                  <Label fx:id="playerScoreLabel" text="Your Score: 0" />
                  <Label fx:id="aiScoreLabel" text="HAL-9000 Score: 0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="1. Choose Your Colour">
                     <font><Font name="Arial Bold" size="20.0" /></font>
                  </Label>
                  <HBox fx:id="choiceBox" alignment="CENTER" spacing="15.0">
                     <children>
                        <Button onAction="#handleColorChoice" prefHeight="80.0" prefWidth="80.0" text="RED" />
                        <Button onAction="#handleColorChoice" prefHeight="80.0" prefWidth="80.0" text="GREEN" />
                        <Button onAction="#handleColorChoice" prefHeight="80.0" prefWidth="80.0" text="BLUE" />
                        <Button onAction="#handleColorChoice" prefHeight="80.0" prefWidth="80.0" text="YELLOW" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="2. Guess HAL's Colour">
                     <font><Font name="Arial Bold" size="20.0" /></font>
                  </Label>
                  <HBox fx:id="guessBox" alignment="CENTER" spacing="15.0">
                     <children>
                        <Button onAction="#handleGuessChoice" prefHeight="80.0" prefWidth="80.0" text="RED" />
                        <Button onAction="#handleGuessChoice" prefHeight="80.0" prefWidth="80.0" text="GREEN" />
                        <Button onAction="#handleGuessChoice" prefHeight="80.0" prefWidth="80.0" text="BLUE" />
                        <Button onAction="#handleGuessChoice" prefHeight="80.0" prefWidth="80.0" text="YELLOW" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmitMove" prefHeight="50.0" prefWidth="200.0" text="Submit Move">
               <font><Font name="System Bold" size="18.0" /></font>
            </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Game Log">
               <font><Font name="Arial Bold" size="16.0" /></font>
            </Label>
            <ScrollPane fitToWidth="true" prefHeight="150.0" prefWidth="880.0">
               <content>
                  <TextArea fx:id="gameLogArea" editable="false" wrapText="true" />
               </content>
            </ScrollPane>
            <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#handlePlayAgain" text="Play Again" visible="false" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
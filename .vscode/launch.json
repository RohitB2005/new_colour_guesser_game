{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Run GUI Version (Maven)",
      "request": "launch",
      "mainClass": "nz.ac.auckland.se281.Main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "mvn: javafx:run"
    },
    {
      "type": "java",
      "name": "Run Terminal Version (CLI)",
      "request": "launch",
      "mainClass": "nz.ac.auckland.se281.Main",
      "args": "--cli",
      "console": "integratedTerminal"
    }
  ]
}